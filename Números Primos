<!--Creacion de Scrip-->

<script language="javascript">


//////////////////////////Validar Números//////////////////////////////////
			
			function ValidaSoloNumeros() {
 			if ((event.keyCode < 48) || (event.keyCode > 57)) 
 			 event.returnValue = false;
				}
//Validación tomada de http://devcate.blogspot.com/2012/10/validar-solo-numeros-o-texto-con.html




/////////////////////////NÚMERO PRIMOS/////////////////////////////////////////////////////
	
/////////////DECLARACIÓN DE VARIABLES///////////////////////////////////////////////
var contador=2; //Contador en 2 Ya que cualquier número es divisible por 1 y por el mismo
var x; //Variable para guardar el número digitado por el usuario.


//______________________________________________________________________________________

///////////////////ASIGNACIÓN DE VARIABLES/////////////////////////


x = prompt("¿Ingrese un número entero diferente de 1?");
//_______________________________________________________________________________________


//////////////////VALIDACIÓN DE CARACTERES/////////////////////////////////

while (parseInt(x) == 1 ) {
x = prompt("!Digitación ERRONEA! Digite un numero entero");
}
//Un  número primo tiene que ser mayor a 1________________________________________________________________

while (parseInt(x) != x ) {
x = prompt("!Digitación ERRONEA! Digite un numero entero");
}
//Validación letras y caracteres especiales____________________________________________________________________________


/////////////////////////////////////METODO/////////////////////////////////////////////////
   
    
    if (x%2==0) {
		contador++;

    };

 if (x%3==0) {
		contador++;

    };

 if (x%5==0) {
		contador++;

    };


 if (x==2) {
		contador--;

    };

 if (x==3) {
		contador--;

    };   

if (x==5) {
		contador--;

    };


document.write("El número: "+x); //Impresión por pantalla

 

if (contador<=2) {

	document.write("!SI! es primo."); //Si el contador es igual o menor a 2 decimos qu es un número primo.
};

if (contador>=3) {

	document.write("!NO! es primo.") //Si el contador es mayor a 2 NO es un número primo.
};
  

//Final del Scrip</script>

</head>






